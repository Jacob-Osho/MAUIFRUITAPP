<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitApp.FruitInfo"
             Title="FruitInfo">
    <Grid RowDefinitions="Auto,Auto,*" Padding="20">
        <Image x:Name="imgFruit" HeightRequest="500"
               Grid.Row="0"/>
        <Label x:Name="lblName" FontSize="Title" Grid.Row="1"/>
        <Label x:Name="lblFruitSentense" FontSize="Subtitle" Grid.Row="2"/>
    </Grid>
</ContentPage>